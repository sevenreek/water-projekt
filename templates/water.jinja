<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Water potability</title>
</head>

<body>
    <div class="d-flex justify-content-center">
    <form>
    
        {% for feature in features %}
        <div class="mb-3">
            <label for="{{ feature.name }}" class="form-label">{{ feature.name }}</label>
            <input type="number" step="0.01" class="form-control" id="{{ feature.name }}">
        </div>
        {% endfor %}
        <button type="submit" class="btn btn-primary">Test water</button>
    </form>
    </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>